<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorPrimaryLight</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabTextColor">#88ffffff</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    </style>

    <style name="LinearProgress" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">#ff8f71</item>
        <item name="android:progressBackgroundTint">#cbd5d9</item>
    </style>

    <style name="LinearProgress2" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">#ff8f71</item>
        <item name="android:progressBackgroundTint">#cbd5d9</item>
    </style>
</resources>
